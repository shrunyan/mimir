{
  "name": "heroku-app-skeleton",
  "description": "Skeleton application for deploying on Heroku. Using Backbone, Marionette and their dependencies.",
  "version": "0.0.1",
  "author": "shrunyan",
  "scripts": {
    "start": "npm run watch & npm run serve",
    "postinstall": "npm run build",
    "build": "npm run clean && npm run compile && npm run build-js && npm run build-css",
    "build-js": "browserify -t hbsfy compile/client/entry.js | uglifyjs -mc > dist/bundle.js",
    "build-css": "cat app/node_modules/public/styles/*.less | lessc - > dist/styles.css",
    "clean": "rm -rf dist/ && mkdir dist/ && rm -rf compile/ && mkdir compile/ ",
    "serve": "iojs --harmony_modules --harmony_arrow_functions compile/server/server.js",
    "watch": "npm run watch-src & npm run watch-compile & npm run watch-css",
    "watch-src": "node_modules/.bin/watch 'npm run compile' app/node_modules/",
    "watch-compile": "watchify -t hbsfy compile/client/entry.js -o dist/bundle.js -dv",
    "watch-css": "catw -c 'lessc -' app/node_modules/public/styles/*.less -o dist/styles.css -dv",
    "compile": "node_modules/.bin/babel app/node_modules/ --out-dir compile/"
  },
  "dependencies": {
    "backbone": "1.1.1",
    "backbone.babysitter": "^0.1.6",
    "backbone.marionette": "^2.4.1",
    "backbone.wreqr": "^1.3.1",
    "body-parser": "^1.12.0",
    "browserify": "^9.0.3",
    "ejs": "^2.3.1",
    "express": "^4.12.2",
    "handlebars": "^3.0.0",
    "hbsfy": "^2.2.1",
    "http": "0.0.0",
    "jquery": "^2.1.3",
    "less": "^2.4.0",
    "mongoose": "^3.8.24",
    "uglify-js": "^2.4.16",
    "underscore": "^1.8.2",
    "watch": "^0.14.0"
  },
  "devDependencies": {
    "babel": "^4.7.16",
    "catw": "^0.2.0",
    "livereload2": "^1.0.1",
    "watchify": "^2.4.0"
  }
}
